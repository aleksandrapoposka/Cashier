@using Cashier.Models.UserManager
@model List<ManageUserRolesViewModel>
@{
    ViewBag.Title = "User Manager";
    string aleks = "Aleks".ToLower();
}
<h1>@ViewBag.Title</h1>
<br />
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User @ViewBag.Username.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    @Html.HiddenFor(m => m[i].RoleId)
                    @Html.HiddenFor(m => m[i].RoleName)
                    @Html.CheckBoxFor(m => m[i].IsSelected, new { @class = "form-check-input" })
                    <label class="form-check-label" for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            @Html.ActionLink("Cancel", "Index", "UserManager", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</form>