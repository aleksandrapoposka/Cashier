@model Cashier.Models.Home.LoginUserViewModel

<h1>Login</h1>
<div class="row">
    <form method="post" asp-action="Login" asp-controller="Home">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col">
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label"asp-for="RememberMe"></label>
        </div>
        <div class="form-group row">
            <div class="col">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>