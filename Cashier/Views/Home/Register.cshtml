@model Cashier.Models.Home.RegisterUserViewModel

<h1>Register</h1>
<div class="row">
    <form method="post" asp-action="Register" asp-controller="Home">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col">
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DateOfBirth"></label>
            </div>
            <div class="col">
                <input type="date" asp-for="DateOfBirth" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
        </div>
        <div class="form-group row">
            <div class="col">
                @*<a class="btn btn-link" href="/Home/Register">Sign Up</a>*@
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>
    </form>
</div>